@model ASP_Test.Models.addStudentview
@{
    Layout = "LayoutDefault";

}
<h3 style="text-align:center;">Log In</h3>
<form method="post" action="LogIn">
    <div class="mb-3" style="text-align:center;">
        <label for="" class="form-label">Email</label>
        <input type="text" placeholder="Sign-In ID (Username)" class="form-control" asp-for="Email" maxlength="30" />


        <label for="" class="form-label">Password</label>
        <input type="password" placeholder="Password " class="form-control" asp-for="StudentPassword" />
    </div>
    <div style="text-align:center;">
        <button type="submit" style="background-color:red" class="btn btn-primary">Submit</button>
    </div>
</form>
<hr />
<div style="text-align:center">
    <button type="button"  style="background-color:red" class="btn btn-primary" onclick="location.href='@Url.Action("SignUp", "Home")'">Sign Up</button>
</div>




