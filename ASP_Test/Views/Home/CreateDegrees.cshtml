@model ASP_Test.Models.DegreeForm
@{
    Layout = "LayoutAdmin";

}
<h7>Note: If returned to this page when trying to submit, the year syntax is wrong. It should be a four digit number</h7>
    <form method="post" action="CreateDegree">
    <div class="mb-3">
        <h3>Degree Name</h3>@Html.TextBoxFor(d=>d.DegreeName,new {@class="form-control", @maxlength="50"})

        <h3>Degree Year</h3> @Html.TextBoxFor(d=>d.VersionYear,new {@class="form-control", @maxlength="4",@minlength="4"})
    </div>


    <button type="submit" class="btn btn-danger">Submit</button>
</form>
<br />
<button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("AdminDegree", "Home")'">Back To Degree Editor</button>


